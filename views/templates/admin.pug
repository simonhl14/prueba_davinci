extends ../layout/index
block contenido 
    div.py-2
        h1.text-4xl.my-10.font-extrabold.text-center Prueba
            span.font-normal davinci
        h2.text-center.text-2xl.font-extrabold= pagina

        if errores
            div(class="max-w-md mx-auto my-10")
                each error in errores
                    p.bg-red-600.text-white.uppercase.text-xs.text-center.p-2.mb-1.font-bold= error.msg
        if msg
            div(class="max-w-md mx-auto my-10")
                each mensaje in msg
                    p.bg-green-600.text-white.uppercase.text-xs.text-center.p-2.mb-1.font-bold= mensaje.msg

        .mt-8.mx-auto.max-w-md 
            button(class=" bg-indigo-500 hover:bg-indigo-700 text-white font-bold mb-2 py-2 px-4 rounded" type="button", onclick="window.location.href='/subir-archivos/'") Volver
            .bg-white.py-8.px-4.shadow
                form.space-y-5(method='POST' action="/subir-archivos/save" enctype="multipart/form-data")
                    div.grid.grid-cols-3.grid-rows-2.gap-4
                        div.inline-flex.items-center.mb-2
                            input(type="checkbox" id="nombre" name="options[]" value="nombre") 
                            label.block.text-sm.uppercase.text-gray-500.font-bold(for="nombre") Nombre
                        div.inline-flex.items-center.mb-2
                            input(type="checkbox" id="apellido" name="options[]" value="apellido") 
                            label.block.text-sm.uppercase.text-gray-500.font-bold(for="apellido") Apellido
                        div.inline-flex.items-center.mb-2
                            input(type="checkbox" id="telefono" name="options[]" value="telefono") 
                            label.block.text-sm.uppercase.text-gray-500.font-bold(for="telefono") Telefono
                        div.inline-flex.items-center.mb-2
                            input(type="checkbox" id="direccion" name="options[]" value="direccion") 
                            label.block.text-sm.uppercase.text-gray-500.font-bold(for="direccion") Direccion
                        div.inline-flex.items-center.mb-2
                            input(type="checkbox" id="producto" name="options[]" value="producto") 
                            label.block.text-sm.uppercase.text-gray-500.font-bold(for="producto") Producto

                    div 
                        input(type="file" name="file" id="file" required )

                    input(class="w-full bg-indigo-600 hover:bg-indigo-700 text-white font-bold py-3 cursor-pointer" onclick="enviarDatos()" id="subir-archivo" type="submit" value="Enviar")
                    script.
                        function enviarDatos(event) {
                            event.preventDefault();
                            var btnSubmit = document.getElementById("subir-archivo");
                            btnSubmit.disabled = true;
                        }

                    